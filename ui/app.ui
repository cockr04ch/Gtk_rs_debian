<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkApplicationWindow" id="main_window">
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <child type="start">
          <object class="GtkToggleButton" id="sidebar_toggle_button">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="active">true</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">0</property>
        <child>
          <object class="GtkStackSidebar" id="sidebar">
            <property name="stack">stack</property>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">page1</property>
                <property name="title">Página 1</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="valign">3</property>
                    <property name="halign">3</property>
                    <property name="vexpand">true</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Bienvenido a BlockHost</property>
                        <property name="margin-bottom">30</property>
                        <style>
                          <class name="title-1"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="subtitle">
                        <property name="orientation">1</property>
                        <property name="halign">3</property>
                        <property name="margin-bottom">30</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Bienvenido Usuario</property>
                            <property name="justify">2</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">page2</property>
                <property name="title">Página 2</property>
                <property name="child">
                  <object class="GtkLabel">
                    <property name="label">Contenido de la Página 2</property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>