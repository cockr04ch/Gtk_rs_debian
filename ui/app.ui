<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkApplicationWindow" id="main_window">
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <child type="start">
          <object class="GtkToggleButton" id="sidebar_toggle_button">
            <property name="icon-name">builder-view-left-pane-symbolic</property>
            <property name="active">true</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">0</property>
        <child>
          <object class="GtkStackSidebar" id="sidebar">
            <property name="stack">stack</property>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">page1</property>
                <property name="title">Página 1</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="valign">3</property>
                    <property name="halign">3</property>
                    <property name="vexpand">true</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Bienvenido a BlockHost</property>
                        <property name="margin-bottom">30</property>
                        <style>
                          <class name="title-1"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="subtitle">
                        <property name="orientation">1</property>
                        <property name="halign">3</property>
                        <property name="margin-bottom">30</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Bienvenido Usuario</property>
                            <property name="justify">2</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">page2</property>
                <property name="title">Página 2</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="valign">3</property>
                    <property name="halign">3</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Dominios</property>
                        <property name="margin-bottom">30</property>
                        <style>
                          <class name="title-1"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="subtitle_page2">
                        <property name="halign">3</property>
                        <property name="orientation">1</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Lista de Dominios</property>
                            <property name="justify">2</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">1</property>
                        <child>
                          <object class="GtkListBox">
                            <property name="selection-mode">0</property>
                            <style>
                              <class name="boxed-list-separate"/>
                            </style>
                            <child>
                              <object class="GtkBox">
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">1</property>
                                    <property name="hexpand">true</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Facebook</property>
                                        <property name="halign">1</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Dominios de facebook</property>
                                        <property name="halign">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkSwitch" id="switch_facebook">
                                    <property name="valign">3</property>
                                    <property name="margin-start">12</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">1</property>
                                    <property name="hexpand">true</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Steven</property>
                                        <property name="halign">1</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Dominios de Steven</property>
                                        <property name="halign">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkSwitch" id="switch_steven">
                                    <property name="valign">3</property>
                                    <property name="margin-start">12</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSpinner" id="loading_spinner">
                            <property name="spinning">true</property>
                            <property name="visible">false</property>
                            <property name="halign">3</property>
                            <property name="margin-top">12</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="apply_button">
                            <property name="label">Apply</property>
                            <property name="halign">4</property>
                            <property name="margin-top">12</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="apply">
                        <property name="label" translatable="yes">Aplicar</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
